---
import "../styles/style.scss";
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
let {title, content, hasTitleElement=false, date, lang="de"} = Astro.props;
const siteTitle = 'Florian Geierstanger';
---
<!DOCTYPE html>
<html lang={lang}>
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
	<title>{title} â€” {siteTitle}</title>
  <link rel="preload" href="/assets/Rubik.woff2" as="font" type="font/woff2" crossorigin>
</head>
<body>
	<div class="layout-grid">

    <header>
			<Header />
    </header>

		<main class="main layout-grid">
      {date &&
        <p class="date">
          {date}
        </p>
      }

      {!hasTitleElement &&
        <h1 class="page-title">
          {title}
        </h1>
      }
			<slot />
		</main>

    <footer>
      <Footer />
    </footer>

	</div>
</body>

</html>


<style lang="scss">

  .site-title {
    font-size: inherit;
    font-weight: inherit;
  }

  header, footer {
    grid-column: container;
  }

  .main > :global(*) {
    grid-column: textcontent;
  }

  .date {
    font-style: italic;
  }

</style>