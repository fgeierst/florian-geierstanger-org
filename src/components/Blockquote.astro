---
const { author, url, lang="en" } = Astro.props;
---

<figure class="blockquote" lang={lang}>
  <blockquote cite={url}>
    <p>
      <slot />
    </p>
  </blockquote>
  <figcaption>
    &mdash;
    <a href={url}>{author}</a>
  </figcaption>
</figure>

<style>
  figure {
    margin-block-start: var(--space-100);
    margin-block-end: var(--space-150);
  }

  blockquote {
    border-inline-start: 3px solid;
    font-style: normal;
    padding-inline-start: var(--space-100);
  }

  blockquote :global(p) {
    margin-block-end: 0;
  }

  figcaption {
    margin-block-start: var(--space-50);
    font-style: italic;
    padding-inline-start: var(--space-300);

    & a {
      text-decoration: none;
    }
  }
</style>
