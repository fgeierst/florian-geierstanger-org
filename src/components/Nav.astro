---
const navItems = [
  { 
    id: '/',
    title: 'Florian Geierstanger'
  },
  { 
    id: '/filmvermittlung',
    title: 'Filmvermittlung'
  },
];
const path = Astro.request.url.pathname;
---
<ul class="nav">

		{navItems.map((item) => (
			<li class={`nav__item ${path == item.id ? "nav__item--active" : ""}`}>
				<a class="nav__link" href={`${item.id}`}>
					{item.title}
				</a>
			</li>
		))}


