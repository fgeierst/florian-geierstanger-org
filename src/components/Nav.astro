---
const {pathname} = new URL(Astro.request.url);

const navItems = [
  { 
    id: '/',
    title: 'Florian Geierstanger',
    additionalStyles: 'nav__item--site-title'
  },
  { 
    id: '/filmvermittlung',
    title: 'Vermittlung'
  },
  { 
    id: '/filme',
    title: 'Filme'
  },
  { 
    id: '/filmprogramme',
    title: 'Kurator'
  },
  { 
    id: '/blog',
    title: 'Blog'
  },
];
---
<nav class="nav">

  <ul class="nav">
      {navItems.map((item) => (
        <li class={`nav__item ${pathname == item.id ? "nav__item--active" : ""} ${item.additionalStyles}`}>
          <a class="nav__link" href={`${item.id}`}>
            {item.title}
          </a>
        </li>
      ))}
  </ul>

</nav>

<style lang="scss">
  .nav {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem 2rem;
    list-style: none;
    margin-block-end: 0;
    margin-block-start: 0;
    padding-inline-start: 0;

    &__item {
      &--active a {
        text-decoration: underline;
      }

      &--site-title {
        @media (min-width: 900px) {
          flex-grow: 1;
        }
      }
    }

    &__link {
      text-decoration: none;

      &:hover {
        text-decoration: underline;
      }
    }
  }
</style>
